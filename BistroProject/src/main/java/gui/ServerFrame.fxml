<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ServerPortFrameController">
   
   <top>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label fx:id="title" text="Bistro Server Configuration" textFill="#2c3e50">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label fx:id="port" text="Port:" />
                  <TextField fx:id="portField" prefWidth="80.0" text="5555" />
                  <Button fx:id="btnStart" mnemonicParsing="false" onAction="#startServer" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Start Server" />
                  <Button fx:id="btnStop" disable="true" mnemonicParsing="false" onAction="#stopServer" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Stop Server" />
               </children>
            </HBox>
            <Label fx:id="statusLabel" text="Status: Disconnected" textFill="RED">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>

   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label fx:id="connClientIPHost" text="Connected Clients (IP &amp; Host):">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            
            <TableView fx:id="clientsTable" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="colIp" prefWidth="150.0" text="IP Address" />
                <TableColumn fx:id="colHost" prefWidth="150.0" text="Host Name" />
                <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
              </columns>
            </TableView>
            
            <Label fx:id="serverConLog" text="Server Console Log:">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextArea fx:id="consoleArea" editable="false" prefHeight="200.0" prefWidth="200.0" style="-fx-font-family: 'Consolas', monospace;" wrapText="true" />
         </children>
      </VBox>
   </center>
   
</BorderPane>
