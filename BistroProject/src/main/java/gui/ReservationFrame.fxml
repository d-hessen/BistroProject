<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="client.ReservationFrameController">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Find Existing Reservation" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <HBox spacing="10" alignment="CENTER">
        <Label text="Order Number:" />
        <TextField fx:id="orderNumberField" promptText="Enter order number" />
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Subscriber ID:" />
        <TextField fx:id="subscriberIdField" promptText="Enter subscriber ID" />
    </HBox>

    <Button text="Find Reservation"
            fx:id="findButton"
            style="-fx-padding: 10 20; -fx-font-size: 14px;"
            onAction="#onFindReservation" />

</VBox>
