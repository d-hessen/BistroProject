<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="236.0" prefWidth="205.0" spacing="15" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MemberLoginController">
   <children>
      <Label prefHeight="35.0" prefWidth="153.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Staff Login" textAlignment="CENTER">
         <VBox.margin>
            <Insets left="20.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="usernameField" prefHeight="25.0" prefWidth="175.0" promptText="Username">
         <VBox.margin>
            <Insets left="5.0" right="5.0" />
         </VBox.margin>
      </TextField>
      <PasswordField fx:id="passwordField" promptText="Password">
         <VBox.margin>
            <Insets left="5.0" right="5.0" />
         </VBox.margin>
      </PasswordField>
      <Button onAction="#handleLogin" text="Login" />
      <Button onAction="#handleBack" text="Back" />
   </children>
</VBox>
