<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="handlers.ReservationFrameController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Find Existing Reservation" />

    <HBox alignment="CENTER" spacing="10">
        <Label text="Order Number:" />
        <TextField fx:id="orderNumberField" promptText="Enter order number" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Label fx:id="memberIdLabel" text="Member ID: " />
        <TextField fx:id="memberIdField" promptText="Enter member ID" />
    </HBox>

    <Button fx:id="findButton" onAction="#Find_Reservation" style="-fx-padding: 10 20; -fx-font-size: 14px;" text="Find Reservation" />
   <Button fx:id="exitBtn" mnemonicParsing="false" onAction="#getExitBtn" text="Back" />

</VBox>
