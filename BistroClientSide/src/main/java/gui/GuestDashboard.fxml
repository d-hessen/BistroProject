<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="350.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="handlers.GuestDashboardController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Guest Services" />
      <Label style="-fx-font-size: 14px;" text="How can we help you today?" />
      
      <VBox alignment="CENTER" spacing="15.0" style="-fx-padding: 20 0 20 0;">
         <children>
            <Button onAction="#handleCurrentVisit" prefHeight="40.0" prefWidth="200.0" style="-fx-font-size: 14px;" text="Current Visit" />
            
            <Button onAction="#handleGetTableNow" prefHeight="40.0" prefWidth="200.0" style="-fx-font-size: 14px;" text="Get Table Now" />
            
            <Button onAction="#handleNewReservation" prefHeight="40.0" prefWidth="200.0" style="-fx-font-size: 14px;" text="New Reservation" />
            
            <Button onAction="#handleFindReservation" prefHeight="40.0" prefWidth="200.0" style="-fx-font-size: 14px;" text="Find Reservation" />
         </children>
      </VBox>
      
      <Button onAction="#handleBack" prefWidth="100.0" style="-fx-background-color: #dddddd;" text="Back" />
   </children>
</VBox>