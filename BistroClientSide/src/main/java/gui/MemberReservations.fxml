<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MemberReservationsController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="My Future Reservations" />
      
      <TableView fx:id="reservationsTable" prefHeight="350.0" prefWidth="450.0">
        <columns>
          <TableColumn fx:id="orderNumColumn" prefWidth="80.0" text="Order #" />
          
          <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Date" />
          
          <TableColumn fx:id="timeColumn" prefWidth="90.0" text="Time" />
          
          <TableColumn fx:id="dinersColumn" prefWidth="90.0" text="Diners" />
          
          <TableColumn fx:id="statusColumn" prefWidth="90.0" text="Status" />
        </columns>
      </TableView>

      <Button onAction="#handleBack" prefWidth="150.0" style="-fx-font-size: 14px;" text="Back to Dashboard" />
   </children>
</VBox>