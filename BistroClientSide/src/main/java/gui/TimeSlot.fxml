<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="450.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.TimeSlotController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <VBox alignment="CENTER" spacing="5.0">
         <children>
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Select a Time" />
            <Label fx:id="selectedDateLabel" style="-fx-text-fill: #666666;" text="Available slots for: [Date]" />
         </children>
      </VBox>

      <ScrollPane fitToWidth="true" prefHeight="300.0" style="-fx-background-color: transparent; -fx-background: transparent;">
         <content>
            <FlowPane fx:id="timeSlotsPane" alignment="CENTER" hgap="15.0" vgap="15.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  </children>
            </FlowPane>
         </content>
      </ScrollPane>

      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Button onAction="#handleBack" prefWidth="100.0" style="-fx-background-color: transparent; -fx-border-color: #cccccc;" text="Back" />
         </children>
      </VBox>
   </children>
</VBox>