<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="650.0" prefWidth="900.0" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.StaffDashboardController">
    
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-border-color: #cccccc; -fx-border-width: 0 0 1 0; -fx-padding: 0 0 10 0;">
        <Label fx:id="dashboardTitleLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Dashboard" />
        <Label fx:id="welcomeLabel" text="Welcome, User" />
        <Button onAction="#handleLogout" style="-fx-background-color: #ffcccc;" text="Logout" />
    </HBox>

    <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        
        <Tab text="Operations &amp; Check-In">
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Customer Arrival Verification" />
                <HBox alignment="CENTER" spacing="15">
                    <Label text="Reservation Code:" />
                    <TextField fx:id="reservationCodeField" />
                    <Button onAction="#handleCheckIn" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Verify &amp; Check-In" />
                </HBox>
                <Label fx:id="checkInStatusLabel" style="-fx-text-fill: blue;" />
            </VBox>
        </Tab>

        <Tab text="Table Management">
            <VBox alignment="TOP_CENTER" spacing="15" style="-fx-padding: 20;">
                <Label text="Manage Restaurant Tables (Green = Free, Red = Occupied)" />
                <GridPane fx:id="tablesGrid" alignment="CENTER" hgap="15" vgap="15">
                    <ToggleButton onAction="#toggleTableStatus" prefHeight="60" prefWidth="60" style="-fx-background-color: lightgreen;" text="1" />
                    <ToggleButton onAction="#toggleTableStatus" prefHeight="60" prefWidth="60" style="-fx-background-color: lightgreen;" text="2" GridPane.columnIndex="1" />
                    <ToggleButton onAction="#toggleTableStatus" prefHeight="60" prefWidth="60" style="-fx-background-color: #ff6666;" text="3" GridPane.columnIndex="2" />
                    <ToggleButton onAction="#toggleTableStatus" prefHeight="60" prefWidth="60" style="-fx-background-color: lightgreen;" text="4" GridPane.rowIndex="1" />
                    <ToggleButton onAction="#toggleTableStatus" prefHeight="60" prefWidth="60" style="-fx-background-color: lightgreen;" text="5" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <ToggleButton onAction="#toggleTableStatus" prefHeight="60" prefWidth="60" style="-fx-background-color: lightgreen;" text="6" GridPane.columnIndex="2" GridPane.rowIndex="1" />
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
            </VBox>
        </Tab>

        <Tab text="Register Member">
            <VBox alignment="TOP_CENTER" spacing="15" style="-fx-padding: 20;">
                <Label style="-fx-font-size: 16px;" text="New Member Registration" />
                <GridPane alignment="CENTER" hgap="10" vgap="10">
                    <Label text="Full Name:" GridPane.rowIndex="0" />
                    <TextField fx:id="regFullName" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    
                    <Label text="Phone:" GridPane.rowIndex="1" />
                    <TextField fx:id="regPhone" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    
                    <Label text="Email:" GridPane.rowIndex="2" />
                    <TextField fx:id="regEmail" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               <Label text="Password:" GridPane.rowIndex="3" />
               <TextField fx:id="regPassword" prefHeight="25.0" prefWidth="168.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" />
               </rowConstraints>
                </GridPane>
                <Button onAction="#handleRegisterMember" style="-fx-font-size: 14px;" text="Create Account" />
            </VBox>
        </Tab>

        <Tab fx:id="managerReportsTab" text="Reports &amp; Stats">
            <VBox spacing="20" style="-fx-padding: 20;">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Executive Reports" />
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Label text="Report Type:" />
                    <ComboBox fx:id="reportTypeCombo" promptText="Select..." />
                    <Label text="Month:" />
                    <ComboBox fx:id="monthCombo" />
                    <Button onAction="#handleGenerateReport" text="Generate" />
                </HBox>
                <TableView fx:id="reportsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn prefWidth="150" text="Category" />
                        <TableColumn prefWidth="100" text="Value" />
                        <TableColumn prefWidth="120" text="Date" />
                    </columns>
                </TableView>
            </VBox>
        </Tab>

        <Tab fx:id="managerAdminTab" text="Administration">
            <VBox spacing="20" style="-fx-padding: 20;">
                <Label style="-fx-font-size: 18px;" text="System Administration" />
                <HBox spacing="20">
                     <Button style="-fx-min-width: 120px;" text="View All Users" />
                     <Button style="-fx-min-width: 120px;" text="System Settings" />
                </HBox>
                <Label text="Recent Activity Log:" />
                <TableView fx:id="logsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn prefWidth="150" text="Time" />
                        <TableColumn prefWidth="100" text="User" />
                        <TableColumn prefWidth="300" text="Action" />
                    </columns>
                </TableView>
            </VBox>
        </Tab>

    </TabPane>
</VBox>
